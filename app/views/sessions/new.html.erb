<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row">
  <div class="span6 offset2 well" style="text-align: center;">
    <%= link_to 'Log in with Facebook', '/auth/facebook?auth_type=rerequest', class: 'btn btn-large btn-primary btn-facebook' %>
    <br /><br />or log in with your email address and password below.
    <br /><br />If you already have a Science Game Center account and would like to start logging in using Facebook, please log in below first and head to <b>Edit Profile</b> where you'll find a <b>Connect to my Facebook profile</b> button.
  </div>
</div>

<div class="row">
  <div class="span6 offset2">
    <%= form_for(:session, :url => sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= label_tag :remember_me, "#{check_box_tag :remember_me, 1, true} Remember me".html_safe %>

      <p class="form-help" id="submit-help"></p>
      <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <p><%= link_to "Forget your password?", new_password_reset_path %></p>
  </div>
</div>
