<% provide(:title, 'Helping to bring science games to the classroom') %>

<div class="center hero-unit" style="padding: 5%">
	<h2>Welcome to the</h2>
  <h1>Science Game Center</h1>

  <h3 style="line-height: 1.2">
    Information and reviews for video games that teach science<br />to people aged 10 to 110
  </h3>
  <br />
  <p><%= link_to "Learn more", about_path, class: "btn btn-large btn-info" %> 
  <%= link_to "See the games!", games_path, class: "btn btn-large btn-primary" %></p>
</div>
	
<div id="games_carousel" class="carousel slide">
	<!-- Carousel items -->
  <div class="carousel-inner">

  	<% i = 0 %>
  	<% @games.each do |game| %>
  	<% if game.screenshots.count > 0 %>
	    <div class="item <%= i == 0 ? 'active' : '' %>">
	    	<%= link_to image_tag(game.screenshots.first.image.url(:carousel), width: '100%'), game_path(game) %>
	    	<div class="carousel-caption">
	    		<p class="title"><span class="prefix">Game: </span><i><%= link_to game.title, game_path(game) %></i></p>
	    		<p class="description">
	    			<%= truncate strip_tags(markdown(game.description)), length: 300 %>
	    			<%= link_to 'Read more &raquo;'.html_safe, game_path(game) %>
	    		</p>
	    	</div>
	    </div>
	    <% i += 1 %>
    <% end %>
    <% end %>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#games_carousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#games_carousel" data-slide="next">&rsaquo;</a>
</div>

  <script>
  	$('.carousel').carousel({
  		interval: 8000
  	});
  </script>