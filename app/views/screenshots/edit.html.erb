<h1 class="left">Edit screenshot for <i><%= @game.title %></i></h1>

<%= form_for @screenshot, :html => { :multipart => true } do |f| %>

	<%= render 'shared/error_messages', object: f.object %>

  <%= f.label :image %>
	<% if f.object.image.file? %>
	<%= image_tag f.object.image.url(:large), style: 'width: 100%;' %>
	<% end %>
	<%= f.file_field :image %>

  <p class="form-help" id="submit-help"><b>Be aware:</b> Upon saving, this screenshot will immediately be visible on the site.</p>
  <%= f.submit "Update screenshot", :class => "btn btn-large btn-primary" %>
  
<% end %>

<p>
  <%= link_to "Delete screenshot", @screenshot, method: :delete, confirm: "Are you sure you want to delete this screenshot?" %>
</p>
