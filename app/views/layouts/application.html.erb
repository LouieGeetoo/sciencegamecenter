<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <%= render 'layouts/top_banners' %>
    <%= render 'layouts/header' %>
    <div class="container" id="content-container">
      <%= render 'layouts/ie6_warning' %>
    	<% flash.each do |key, value| %>
        <% if !value.nil? && !value.empty? && key != :recaptcha_error %>
        <div class="alert alert-<%= key %>">
          <%= value %>
          <a class='close' data-dismiss='alert' href='#'>&times;</a>
        </div>
        <% end %>
      <% end %>

      <div class="row-fluid">
        <div class="span10">
          <%= yield %>
        </div>
        <%= render 'layouts/side_banners' %>
      </div>

      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>