<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <p>The form contains <%= pluralize(@user.errors.count, "error") %>.</p>
      <ul class="round">
      <% @user.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>