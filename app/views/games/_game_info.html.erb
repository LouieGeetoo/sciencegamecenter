<table class="table table-condensed game_info">

	<tbody>
		<tr>
			<td class="info-key">
				<b>Deals with</b>
			</td>
			<td class="info-value">
				<%= subject_links_list(game) %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Intended for</b>
			</td>
			<td class="info-value">
				<%= game.intended_audience %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Available on</b>
			</td>
			<td class="info-value">
				<%= platform_links_list(game) %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				&nbsp;
			</td>
			<td class="info-value">
				&nbsp;
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Developed by</b>
			</td>
			<td class="info-value">
				<%= markdown_inline "#{game.developer}#{external_link_icon}" %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Website at</b>
			</td>
			<td class="info-value">
				<%= tracked_link_to "Visit website #{external_link_icon}".html_safe, "#{game.website_url}?utm-source=sciencegamecenter.org", title: "Visit this game's website at #{game.website_url}" %>
			</td>
		</tr>
	</tbody>
</table>

<% if signed_in? && current_user.is_admin? %>
<%= render 'games/admin_tools', game: game %>
<% end %>