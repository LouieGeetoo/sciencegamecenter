<table class="table table-condensed game_info">

	<tbody>
		<tr>
			<td class="info-key">
				<b>Subjects</b>
			</td>
			<td class="info-value">
				<%= subject_links_list(game) %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Available on</b>
			</td>
			<td class="info-value">
				<%= platform_links_list(game) %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Developed by</b>
			</td>
			<td class="info-value">
				<%= markdown_inline game.developer %>
			</td>
		</tr>
		<tr>
			<td class="info-key">
				<b>Website</b>
			</td>
			<td class="info-value">
				<%= tracked_link_to "Visit #{external_link_icon}".html_safe, "#{game.website_url}?utm-source=sciencegamecenter.org", title: "Visit this game's website at #{game.website_url}" %>
			</td>
		</tr>
	</tbody>
</table>

<% if signed_in? && current_user.is_admin? %>
<%= render 'games/admin_tools', game: game %>
<% end %>