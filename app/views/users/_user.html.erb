<li>
  <%= gravatar_for user, :size => 52 %>
  <%= link_to user.name, user %>
  <% if user.disabled? %> (DISABLED)<% end %>
  <% if current_user.is_admin? && !current_user?(user) %>
  	| <%= link_to "[Delete]", user, method: :delete, confirm: "Are you sure you want to destroy this user now and for the rest of time, with no going back?" %>
  <% end %>
</li>